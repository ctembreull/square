<%= form_with(model: affiliation, data: { controller: "affiliation-form" }) do |form| %>
  <% if affiliation.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(affiliation.errors.count, "error") %> prohibited this affiliation from being saved:</h4>
      <ul class="mb-0">
        <% affiliation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :team_id %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :league_id, "League", class: "form-label" %>
      <% leagues = defined?(@available_leagues) && @available_leagues ? @available_leagues : League.order(:name) %>
      <%= form.collection_select :league_id, leagues, :id, :name, { prompt: "Select a league" }, { class: "form-select", required: true, data: { affiliation_form_target: "league", action: "change->affiliation-form#filterConferences" } } %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :conference_id, "Conference", class: "form-label" %>
      <select name="<%= form.object_name %>[conference_id]" id="<%= form.object_name %>_conference_id" class="form-select" required data-affiliation-form-target="conference">
        <option value="">Select a conference</option>
        <% Conference.includes(:league).order(:display_name).each do |conference| %>
          <option value="<%= conference.id %>" data-league-id="<%= conference.league_id %>" <%= 'selected' if affiliation.conference_id == conference.id %>><%= conference.display_name %></option>
        <% end %>
      </select>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel",
        affiliation.team_id ? team_path(affiliation.team_id) : (affiliation.team ? team_path(affiliation.team) : teams_path),
        class: "btn btn-secondary",
        data: { turbo_frame: "_top" } %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
