<%= turbo_frame_tag "affiliation_modal" do %>
  <div class="modal fade show" id="affiliationModal" tabindex="-1" aria-labelledby="affiliationModalLabel" style="display: block;" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="affiliationModalLabel">Edit Affiliation</h5>
          <%= link_to team_path(@affiliation.team), class: "btn-close", data: { turbo_frame: "_top" }, aria: { label: "Close" } do %><% end %>
        </div>
        <div class="modal-body">
          <%= render "form", affiliation: @affiliation %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-backdrop fade show"></div>
<% end %>
