<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Team Affiliations</h1>
    <%= link_to "New Affiliation", new_affiliation_path, class: "btn btn-primary" %>
  </div>

  <% if @affiliations.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Team</th>
                <th>League</th>
                <th>Conference</th>
                <th>Division</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @affiliations.each do |affiliation| %>
                <tr>
                  <td><strong><%= affiliation.team.display_name %></strong></td>
                  <td><%= affiliation.league.name %></td>
                  <td><%= affiliation.conference.display_name %></td>
                  <td><%= affiliation.division.display_name %></td>
                  <td class="text-end">
                    <div class="btn-group btn-group-sm">
                      <%= link_to "Edit", edit_affiliation_path(affiliation), class: "btn btn-falcon-default" %>
                      <%= button_to "Delete", affiliation_path(affiliation), method: :delete,
                          data: { turbo_confirm: "Are you sure you want to delete this affiliation?" },
                          class: "btn btn-falcon-default text-danger" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      <p class="mb-0">No team affiliations have been created yet.</p>
    </div>
  <% end %>
</div>
