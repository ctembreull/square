<div id="stylesTable" class="card">
  <div class="card-header">
    <div class="row flex-between-center">
      <div class="col-6 col-sm-auto d-flex align-items-center pe-0">
        <h5 class="fs-9 mb-0 text-nowrap py-2 py-xl-0">Styles</h5>
      </div>
      <div class="col-6 col-sm-auto ms-auto text-end ps-0">
        <% if team.colors.any? %>
          <%= link_to new_style_path(team_id: team.id),
              class: "btn btn-falcon-default btn-sm",
              data: { turbo_frame: "style_modal" } do %>
            <span class="d-none d-sm-inline-block ms-1">New</span>
          <% end %>
        <% else %>
          <span class="text-muted fs-10">Add colors first</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body p-3">
    <% if team.styles.any? %>
      <div class="d-flex flex-column gap-2">
        <% team.styles.ordered.each do |style| %>
          <div class="d-flex align-items-center gap-2">
            <div class="flex-grow-1" style="<%= style.css %> padding: 8px 12px; border-radius: 4px; font-weight: bold; text-align: center;">
              <%= style.name %>
              <% if style.default? %>
                <i class="fas fa-star ms-1" title="Default style"></i>
              <% end %>
            </div>
            <div class="dropstart font-sans-serif">
              <button class="btn btn-link text-600 btn-sm dropdown-toggle dropdown-caret-none btn-reveal" type="button" id="dropdown-team-style-<%= style.id %>" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent">
                <span class="fas fa-ellipsis-v fs-10"></span>
              </button>
              <div class="dropdown-menu dropdown-menu-end border py-2" aria-labelledby="dropdown-team-style-<%= style.id %>">
                <%= link_to "Edit", edit_style_path(style),
                    class: "dropdown-item",
                    data: { turbo_frame: "style_modal" } %>
                <div class="dropdown-divider"></div>
                <%= link_to "Delete", style_path(style),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this style?" },
                    class: "dropdown-item text-danger" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted mb-0 text-center fs-10">No styles defined</p>
    <% end %>
  </div>
</div>
