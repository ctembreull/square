<div class="d-flex justify-content-between align-items-center mt-4">
  <h1>Conferences</h1>
  <%= link_to "New Conference", new_conference_path, class: "btn btn-primary" %>
</div>

<% if @conferences.any? %>
  <div class="card mt-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Display</th>
              <th>Abbreviation</th>
              <th>League</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @conferences.each do |conference| %>
              <tr>
                <td><strong><%= link_to conference.name, conference %></strong></td>
                <td><%= conference.display_name %></td>
                <td><%= conference.abbr %></td>
                <td><span class="badge bg-secondary"><%= conference.league.name %></span></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <%= link_to "Edit", edit_conference_path(conference), class: "btn btn-falcon-default" %>
                    <%= button_to "Delete", conference_path(conference), method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this conference?" },
                        class: "btn btn-falcon-default text-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-info mt-4">
    <p class="mb-0">No conferences have been configured yet.</p>
  </div>
<% end %>
