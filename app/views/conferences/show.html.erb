<div class="row mb-3">
	<div class="col-12">
		<div class="card bg-100 shadow-none border mb-0">
			<div class="card-body p-0">
				<div class="row gx-0 p-2 pb-0 mb-0 flex-between-center" id="header-top">
					<div class="col-auto">
						<div>
							<h6 class="fs-10 mb-0">
								<%= link_to league_path(@conference.league), class: "text-decoration-none text-muted mb-2 d-block" do %>
									<i class="bi bi-arrow-left"></i> Back to <%= @conference.league.name %>
								<% end %>
							</h6>
							<h4 class="text-primary fw-bold mb-0">
								Conference:
								<span class="text-info fw-medium"><%= @conference.display_name %></span>
							</h4>
						</div>
					</div>
					<div class="col-auto">
						<%= link_to "Edit Conference", edit_conference_path(@conference), class: "btn btn-secondary" %>
					</div>
				</div>
				<div class="row gx-0 p-2 pt-0" id="header-info">
					<div class="col-8 text-start">
						<span class="badge bg-secondary"><%= @conference.league.name %></span>
						<% if @conference.abbr.present? %>
							<span class="badge bg-info"><%= @conference.abbr %></span>
						<% end %>
					</div>
					<div class="col-4 text-end"></div>
				</div>
				<% if false %>
					<div class="row gx-0 p-2 bg-700 text-200" id="header-toolbar">
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<!-- Left column: Team affiliations -->
	<div class="col-6">
		<%= render "conferences/conference_teams_card",
		    conference: @conference,
		    affiliations: @affiliations,
		    available_teams: @available_teams %>
	</div>

	<!-- Right column: Games by event -->
	<div class="col-6">
		<div class="card">
			<div class="card-header p-2 border-bottom">
				<h5 class="fs-9 mb-0 text-nowrap py-2 py-xl-0">
					Games
					<span class="badge bg-soft-secondary text-secondary ms-2"><%= @games_by_event.values.flatten.count %></span>
				</h5>
			</div>
			<div class="card-body px-0 py-0">
				<table class="table table-sm fs-10 m-0">
					<% if @games_by_event.any? %>
						<% @games_by_event.each do |event, games| %>
							<tbody>
								<tr>
									<td colspan="5" class="bg-500 py-2">
										<h6 class="text-200 my-0">
											<%= link_to event.title, event_path(event), class: "text-decoration-none, text-light" %>
											<span class="text-light ms-1">(<%= games.count %>)</span>
										</h6>
									</td>
								</tr>
								<% games.each do |game| %>
									<%= render "conferences/conference_games_card", game: game %>
								<% end %>
							</tbody>
						<% end %>
					<% else %>
						<tbody>
							<tr>
								<td colspan="9" class="bg-500 py-2">
									<h6 class="text-200 my-0">
										No games for teams in this conference yet.
									</h6>
								</td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
