
<div class="row mb-3">
	<div class="col-12 px-0">
		<div class="card bg-100 shadow-none border py-2">
			<div class="row gx-0 flex-between-center">
				<div class="col-sm-auto d-flex align-items-center px-7">
					<div>
						<h6 class="text-primary fs-10 mb-0">
							<%= link_to @game, class: "text-decoration-none text-muted mb-2 d-block" do %>
        				<i class="fas fa-chevron-left"></i> Back to Game
      				<% end %>
						</h6>
						<h4 class="text-primary fw-bold mb-0">
							Game
							<span class="text-info fw-medium">Editor</span>
						</h4>
					</div>
				</div>
				<div class="col-md-auto p-3">
					<%= button_to swap_teams_game_path(@game), method: :patch, class: "btn btn-outline-secondary btn-sm", data: { turbo_confirm: "Swap home and away teams?" } do %>
						<span class="fas fa-exchange-alt me-1"></span> Swap Teams
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

<div data-controller="game-form">
	<div class="row mb-3">
		<div class="col-12 px-0">
			<div class="card">
				<div class="card-body">
					<%= render "form", game: @game %>
				</div>
			</div>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-12 px-0">
			<div class="card">
				<%= render "games/components/grid_preview", game: @game,
						home_banner_target: "homeBanner",
						away_banner_target: "awayBanner",
						home_team: @game.home_team&.display_name,
						away_team: @game.away_team&.display_name,
						home_style: @game.home_style,
						away_style: @game.away_style %>
			</div>
		</div>
	</div>
</div>
