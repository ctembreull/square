<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>New Game</h1>
  </div>
</div>

<div data-controller="game-form">
	<div class="row mb-3">
		<div class="col-12 px-0">
			<div class="card">
				<div class="card-body">
					<%= render "form", game: @game %>
				</div>
			</div>
		</div>
	</div>

	<div class="row mb-3">
		<div class="col-12 px-0">
			<div class="card">
				<%= render "games/components/grid_grid",
						home_banner_target: "homeBanner",
						away_banner_target: "awayBanner" %>
			</div>
		</div>
	</div>
</div>