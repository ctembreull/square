<!-- upcoming game widget -->
<div class="row g-0 py-2 border-bottom">
	<div class="col">
		<div class="row m-0 p-0 flex-between-center">
			<div class="col-auto m-0 border">
				<%= link_to game, class: "fw-semi-bold fs-10 ps-0 pb-1 h6" do %>
					<%= game.league.abbr %>:
					<%= game.title %><span class="fas fa-chevron-right ms-1" data-fa-transform="shrink-4 down-1"></span>
				<% end %>
			</div>
			<div class="col-auto">
				<p class="mb-0 fs-10 text-900 font-sans-serif">
					<%= game.starts_at.in_time_zone(current_timezone).strftime("%Y/%m/%d %l:%M %p %Z") %>
					<span class="text-600"><%= game.broadcast_network %></span>
				</p>
			</div>
		</div>
		<div class="row mt-0">
			<div class="col-12 p-0">
				<table>
					<tr>
						<td class="h6 ps-1" style="width: 48%; text-align: center;">
							<div class="p-1 <%= game.away_style %>"><%= game.away_team.display_location %></div>
						</td>
						<td class="h6 p-1 bg-200" style="width: 4%;">vs.</td>
						<td class="h6 pe-1" style="width: 48%; text-align: center;">
							<div class="p-1 <%= game.home_style %>"><%= game.home_team.display_location %></div>
						</td>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>