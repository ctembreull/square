
<%# game list widget %>
<div class="row g-0 mt-2">
	<div class="col">
		<div class="row g-0 flex-between-center">
			<div class="col-auto ps-1 fs-10 align-items-center">
				<h6 class="mb-0">
					<%= link_to game, class: "fw-semi-bold text-muted" do %>
						<%= game.title %>
						<span class="fas fa-chevron-right ms-1" data-fa-transform="shrink-4 down-1"></span>
					<% end %>
				</h6>
			</div>
			<div class="col-auto pe-1 fs-10">
				<%= game.starts_at.in_time_zone(current_timezone).strftime("%Y/%m/%d %l:%M %p %Z") %>
				<span class="text-600"><%= game.broadcast_network %></span>
			</div>
		</div>
		<div class="row g-0">
			<table class="m-0">
				<tr>
					<td class="text-center p-0" class="p-0" style="width: 50%;">
						<div class="h6 p-1 m-0 <%= game.away_style %>">
							<%= link_to game.away_team.display_location, game.away_team, class: "text-decoration-none #{game.away_style}" %>
						</div>
					</td>
					<td class="text-center bg-300 fw-bold fs-10 px-1">
						<%= link_to "vs", game, class: "fw-semi-bold text-700 text-decoration-none" %>
					</td>
					<td class="text-center" class="p-0" style="width: 50%;">
						<div class="h6 p-1 m-0 <%= game.home_style %>">
							<%= link_to game.home_team.display_location, game.home_team, class: "text-decoration-none #{game.home_style}" %>
						</div>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>