<%= form_with(model: division, local: true) do |form| %>
  <% if division.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(division.errors.count, "error") %> prohibited this division from being saved:</h4>
      <ul class="mb-0">
        <% division.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :conference_id, "Conference", class: "form-label" %>
      <%= form.collection_select :conference_id, Conference.includes(:league).all.order("leagues.sport, conferences.name"),
          :id, ->(c) { "#{c.name} (#{c.league.name})" },
          { prompt: "Select a conference" }, class: "form-select", required: true %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :abbr, "Abbreviation", class: "form-label" %>
      <%= form.text_field :abbr, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9 mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="col-md-3 mb-3">
      <%= form.label :order, "Display Order", class: "form-label" %>
      <%= form.number_field :order, class: "form-control", min: 0, value: division.order || 0, required: true %>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel", divisions_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
