<div class="d-flex justify-content-between align-items-center mt-4">
  <h1>Divisions</h1>
  <%= link_to "New Division", new_division_path, class: "btn btn-primary" %>
</div>

<% if @divisions.any? %>
  <div class="card mt-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Abbreviation</th>
              <th>Conference</th>
              <th>League</th>
              <th>Order</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @divisions.each do |division| %>
              <tr>
                <td><strong><%= division.name %></strong></td>
                <td><%= division.abbr %></td>
                <td><span class="badge bg-secondary"><%= division.conference.name %></span></td>
                <td><span class="badge bg-info"><%= division.conference.league.name %></span></td>
                <td><%= division.order %></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <%= link_to "Edit", edit_division_path(division), class: "btn btn-falcon-default" %>
                    <%= button_to "Delete", division_path(division), method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this division?" },
                        class: "btn btn-falcon-default text-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-info mt-4">
    <p class="mb-0">No divisions have been configured yet.</p>
  </div>
<% end %>
