<%= turbo_frame_tag "color_modal" do %>
  <div class="modal fade show" id="colorModal" tabindex="-1" aria-labelledby="colorModalLabel" style="display: block;" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="colorModalLabel">Edit Color</h5>
          <%= link_to team_path(@color.team), class: "btn-close", data: { turbo_frame: "_top" }, aria: { label: "Close" } do %><% end %>
        </div>
        <div class="modal-body">
          <%= render "form", color: @color %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-backdrop fade show"></div>
<% end %>
