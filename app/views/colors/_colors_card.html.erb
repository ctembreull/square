<div id="colorsTable" class="card">
  <div class="card-header">
    <div class="row flex-between-center">
      <div class="col-6 col-sm-auto d-flex align-items-center pe-0">
        <h5 class="fs-9 mb-0 text-nowrap py-2 py-xl-0">Colors</h5>
      </div>
      <div class="col-6 col-sm-auto ms-auto text-end ps-0">
        <%= link_to new_color_path(team_id: team.id),
            class: "btn btn-falcon-default btn-sm",
            data: { turbo_frame: "color_modal" } do %>
          <span class="d-none d-sm-inline-block ms-1">New</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body px-0 py-0">
    <div class="table-responsive scrollbar">
      <table class="table table-sm fs-10 mb-0 overflow-hidden">
        <thead class="bg-200">
          <tr>
            <th class="text-900 pe-1 align-middle white-space-nowrap" style="width: 40px;">Swatch</th>
            <th class="text-900 pe-1 align-middle white-space-nowrap">Name</th>
            <th class="text-900 pe-1 align-middle white-space-nowrap">Hex</th>
            <th class="pe-1 align-middle white-space-nowrap data-table-row-action" style="width: 28px;"></th>
          </tr>
        </thead>
        <tbody id="table-colors-body">
          <% team.colors.ordered.each do |color| %>
            <tr>
              <td class="align-middle">
                <div style="width: 24px; height: 24px; background-color: <%= color.css_hex %>; border: 1px solid #dee2e6; border-radius: 4px;"></div>
              </td>
              <th class="align-middle white-space-nowrap">
                <%= color.name %>
                <% if color.primary? %>
                  <span class="badge bg-primary ms-1">Primary</span>
                <% end %>
              </th>
              <td class="align-middle white-space-nowrap text-monospace">
                <%= color.css_hex %>
              </td>
              <td class="align-middle white-space-nowrap">
                <div class="dropstart font-sans-serif position-static d-inline-block">
                  <button class="btn btn-link text-600 btn-sm dropdown-toggle dropdown-caret-none btn-reveal float-end" type="button" id="dropdown-team-color-<%= color.id %>" data-bs-toggle="dropdown" data-boundary="window" aria-haspopup="true" aria-expanded="false" data-bs-reference="parent">
                    <span class="fas fa-ellipsis-h fs-10"></span>
                  </button>
                  <div class="dropdown-menu dropdown-menu-end border py-2" aria-labelledby="dropdown-team-color-<%= color.id %>" style="">
                    <%= link_to "Edit", edit_color_path(color),
                        class: "dropdown-item",
                        data: { turbo_frame: "color_modal" } %>
                    <div class="dropdown-divider"></div>
                    <%= link_to "Delete", color_path(color),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this color?" },
                        class: "dropdown-item text-danger" %>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
