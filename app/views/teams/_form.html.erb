<%= form_with(model: team, local: true) do |form| %>
  <% if team.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h4>
      <ul class="mb-0">
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= form.label :abbr, "Abbreviation", class: "form-label" %>
      <%= form.text_field :abbr, class: "form-control", placeholder: "e.g., ALA, OSU" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :display_location, "Display Location (optional)", class: "form-label" %>
      <%= form.text_field :display_location, class: "form-control", placeholder: "Override location for display" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :level, class: "form-label" %>
      <%= form.select :level, [["College", "college"], ["Pro", "pro"]], { prompt: "Select level" }, class: "form-select" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= form.label :prefix, "Prefix (optional)", class: "form-label" %>
      <%= form.text_field :prefix, class: "form-control", placeholder: "e.g., University of" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :location, class: "form-label" %>
      <%= form.text_field :location, class: "form-control", required: true, placeholder: "e.g., Alabama, Ohio State" %>
    </div>

    <div class="col-md-4 mb-3">
      <%= form.label :suffix, "Suffix (optional)", class: "form-label" %>
      <%= form.text_field :suffix, class: "form-control", placeholder: "e.g., University" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :name, "Mascot/Name", class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true, placeholder: "e.g., Crimson Tide, Buckeyes" %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :womens_name, "Women's Name (if different)", class: "form-label" %>
      <%= form.text_field :womens_name, class: "form-control", placeholder: "e.g., Lady Vols" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 mb-3">
      <%= form.label :brand_info, "Brand Info (optional)", class: "form-label" %>
      <%= form.text_area :brand_info, class: "form-control", rows: 3, placeholder: "Additional branding information" %>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel", teams_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
