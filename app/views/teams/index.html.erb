<div class="d-flex justify-content-between align-items-center mt-4">
  <h1>Teams</h1>
  <%= link_to "New Team", new_team_path, class: "btn btn-primary" %>
</div>

<% if @teams.any? %>
  <div class="card mt-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Abbr</th>
              <th>Team</th>
              <th>Level</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @teams.each do |team| %>
              <tr>
                <td><%= team.abbr %></td>
                <td><strong><%= link_to team.display_name, team %></strong></td>
                <td><%= team.level %></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <%= link_to "Edit", edit_team_path(team), class: "btn btn-falcon-default" %>
                    <%= button_to "Delete", team_path(team), method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this team?" },
                        class: "btn btn-falcon-default text-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-info mt-4">
    <p class="mb-0">No teams have been configured yet.</p>
  </div>
<% end %>
