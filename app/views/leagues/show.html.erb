<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <%= link_to leagues_path, class: "text-decoration-none text-muted mb-2 d-block" do %>
        <i class="bi bi-arrow-left"></i> Back to Sports
      <% end %>
      <h1><%= @league.name %></h1>
      <div class="text-muted">
        <span class="badge bg-primary"><%= @league.sport&.titleize %></span>
        <% if @league.gender.present? %>
          <span class="badge bg-secondary"><%= @league.gender.titleize %></span>
        <% end %>
        <% if @league.level.present? %>
          <span class="badge bg-info"><%= @league.level %></span>
        <% end %>
      </div>
    </div>
    <div>
      <%= link_to "Edit League", edit_league_path(@league), class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Conferences</h5>
          <%= link_to "New Conference", new_conference_path(league_id: @league.id), class: "btn btn-sm btn-primary" %>
        </div>
        <div class="card-body">
          <% if @conferences.any? %>
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th>Abbreviation</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @conferences.each do |conference| %>
                    <tr>
                      <td>
                        <%= link_to conference.name, conference_path(conference), class: "text-decoration-none" %>
                      </td>
                      <td><%= conference.display_name %></td>
                      <td><%= conference.abbr %></td>
                      <td class="text-end">
                        <div class="btn-group btn-group-sm">
                          <%= link_to "View", conference_path(conference), class: "btn btn-falcon-default" %>
                          <%= link_to "Edit", edit_conference_path(conference), class: "btn btn-falcon-default" %>
                          <%= button_to "Delete", conference_path(conference), method: :delete,
                              data: { turbo_confirm: "Are you sure you want to delete this conference?" },
                              class: "btn btn-falcon-default text-danger" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-muted mb-0">No conferences have been added to this league yet.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
