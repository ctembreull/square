<div class="row mb-3">
	<div class="col">
		<div class="card bg-100 shadow-none border py-2">
			<div class="row gx-0 flex-between-center">
				<div class="col-sm-auto d-flex align-items-center"><img class="ms-n2" src="../assets/img/illustrations/crm-bar-chart.png" alt="" width="90">
					<div>
						<h6 class="text-primary fs-10 mb-0">
							<%= link_to leagues_path, class: "text-decoration-none text-muted mb-2 d-block" do %>
        				<i class="bi bi-arrow-left"></i> Back to Sports
      				<% end %>
						</h6>
						<h4 class="text-primary fw-bold mb-0">
							League: 
							<span class="text-info fw-medium"><%= @league.name %></span>
						</h4>
					</div>
				</div>
				<div class="col-md-auto p-3">
					<!-- buttons etc go here -->
					<%= link_to "Edit League", edit_league_path(@league), class: "btn btn-secondary btn-sm btn-outline" %>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row mb-3">
	<% @conferences.each do |conference| %>
		<div class="col col-4">
			<div class="card mb-4">
				<div class="card-header p-1 bg-body-tertiary d-flex flex-between-center">
					<h6><%= link_to conference.display_name, conference, class: "text-muted" %></h6>
					<div class="dropdown font-sans-serif btn-reveal-trigger">
							<button class="btn btn-link text-600 btn-sm dropdown-toggle dropdown-caret-none btn-reveal" type="button" id="dropdown-conference-options" data-bs-toggle="dropdown" data-boundary="viewport" aria-haspopup="true" aria-expanded="false">
								<span class="fas fa-ellipsis-h fs-11">&nbsp;</span>
							</button>
							<div class="dropdown-menu dropdown-menu-end border py-2" aria-labelledby="dropdown-conference-options">
								<%= link_to "View", conference, class: "dropdown-item" %>
								<%= link_to "Edit", edit_conference_path(conference), class: "dropdown-item" %>
								<div class="dropdown-divider"></div>
								<%= link_to "Delete", conference_path(conference), method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this conference?" },
                        class: "dropdown-item text-danger" %>
							</div>
						</div>
				</div>
				<div class="card-body p-0 g-0">
					<% if conference.teams.any? %>
						<ul class="list-group list-group-flush">
							<% conference.teams.alphabetical.each do |team| %>
								<li class="list-group-item py-1 px-2">
									<%= link_to team.display_name, team, class: "text-decoration-none text-600" %>
								</li>
							<% end %>
						</ul>
					<% else %>
						<div class="p-2 text-center text-muted">
							<small>No teams yet</small>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	<% end %>
</div>
