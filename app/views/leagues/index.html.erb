<div class="d-flex justify-content-between align-items-center mt-4">
  <h1>Sports</h1>
  <%= link_to "New League", new_league_path, class: "btn btn-primary" %>
</div>

<% if @leagues.any? %>
  <div class="card mt-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Abbreviation</th>
              <th>Sport</th>
              <th>Gender</th>
              <th>Level</th>
              <th>Periods</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @leagues.each do |league| %>
              <tr>
                <td>
                  <%= link_to league.name, league_path(league), class: "text-decoration-none fw-bold" %>
                </td>
                <td><%= league.abbr %></td>
                <td><span class="badge bg-primary"><%= league.sport&.titleize %></span></td>
                <td><%= league.gender&.titleize %></td>
                <td><%= league.level %></td>
                <td><%= league.periods %></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <%= link_to "View", league_path(league), class: "btn btn-falcon-default" %>
                    <%= link_to "Edit", edit_league_path(league), class: "btn btn-falcon-default" %>
                    <%= button_to "Delete", league_path(league), method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this league?" },
                        class: "btn btn-falcon-default text-danger" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-info mt-4">
    <p class="mb-0">No leagues have been configured yet.</p>
  </div>
<% end %>
