<tr>
	<td><%= game.starts_at.in_time_zone(current_timezone).strftime("%m/%d/%Y, %-I:%M %P") %></td>
	<th><%= game.league.abbr %></th>
	<th>
		<%= link_to game do %>
			<%= game.title %>
		<% end %>
	</th>
	<td class="text-center px-2 align-middle <%= game.away_style %> fw-semi-bold" style="width: 20%;" colspan="2">
		<%= game.away_team.display_location %>
	</td>
	<td class="bg-200 fw-semi-bold align-middle text-center">vs</td>
	<td class="text-center px-2 <%= game.home_style %> fw-semi-bold" style="width: 20%;" colspan="2">
		<%= game.home_team.display_location %>
	</td>
	<td class="text-end"><%= game.broadcast_network %></td>
</tr>