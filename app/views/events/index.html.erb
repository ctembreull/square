<div class="container">
  <h1 class="mt-4">Family Squares Events</h1>

  <% if @current_event %>
    <div class="alert alert-success mt-4">
      <h2 class="alert-heading">Current Event</h2>
      <h3><%= @current_event.title %></h3>
      <p>
        <strong>Dates:</strong> <%= @current_event.start_date.strftime("%B %d, %Y") %> - <%= @current_event.end_date.strftime("%B %d, %Y") %>
      </p>
      <%= link_to "Go to Event", event_path(@current_event), class: "btn btn-primary btn-lg" %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4">
      <p class="mb-0">No current event at this time. Check back soon!</p>
    </div>
  <% end %>

  <% if @past_events.any? %>
    <h2 class="mt-5">Past Events</h2>
    <div class="row mt-3">
      <% @past_events.each do |event| %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text">
                <strong>Dates:</strong> <%= event.start_date.strftime("%B %d, %Y") %> - <%= event.end_date.strftime("%B %d, %Y") %>
              </p>
              <%= link_to "View Event", event_path(event), class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
