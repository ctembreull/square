<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h4>
      <ul class="mb-0">
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true, placeholder: "e.g., March Madness 2026", autofocus: true %>
    <div class="form-text">A descriptive name for this event.</div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :start_date, class: "form-label" %>
      <%= form.date_field :start_date, class: "form-control", required: true %>
      <div class="form-text">When the event begins.</div>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :end_date, "End Date (optional)", class: "form-label" %>
      <%= form.date_field :end_date, class: "form-control" %>
      <div class="form-text">Leave blank for open-ended events. Can be set later.</div>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "Cancel", events_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
