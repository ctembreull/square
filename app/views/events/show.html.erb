<div class="row mb-3">
	<div class="col">
		<div class="card bg-100 shadow-none border py-2">
			<div class="row gx-0 flex-between-center">
				<div class="col-sm-auto d-flex align-items-center px-7">
					<div>
						<h6 class="text-primary fs-10 mb-0">
							<%= link_to events_path, class: "text-decoration-none text-muted mb-2 d-block" do %>
        				<i class="bi bi-arrow-left"></i> Back to Events
      				<% end %>
						</h6>

						<h4 class="text-primary fw-bold mb-0">
							Event:
							<span class="text-info fw-medium"><%= @event.title %></span>
						</h4>
					</div>
				</div>
				<div class="col-md-auto p-3">
					<% if @event.active? %>
						<%= link_to deactivate_event_path(@event),
							data: { turbo_method: :patch, turbo_confirm: "Deactivate #{@event.title}?" },
							class: "btn btn-outline-warning btn-sm" do %>
						<span class="fas fa-eye-slash me-1"></span> Deactivate
						<% end %>
					<% else %>
						<%= link_to activate_event_path(@event),
							data: { turbo_method: :patch },
							class: "btn btn-outline-success btn-sm" do %>
						<span class="fas fa-eye me-1"></span> Activate
						<% end %>
					<% end %>

					<%= link_to edit_event_path(@event), class: "btn btn-outline-secondary btn-sm" do %>
            			<span class="fas fa-edit me-1"></span> Edit
          			<% end %>
				</div>
			</div>
			<div class="row gx-0">
				<div class="col-sm-auto d-flex align-items-center ps-7">
					<h6 class="text-muted fs-10 mb-0">
						<% if @event.upcoming? %>
							<span class="badge bg-info ms-2">Upcoming</span>
						<% elsif @event.in_progress? %>
							<span class="badge bg-success ms-2">In Progress</span>
						<% else %>
							<span class="badge bg-secondary ms-2">Completed</span>
						<% end %>

						<% if @event.active? %>
              <span class="badge bg-success ms-2"><span class="fas fa-eye me-1"></span> Active</span>
            <% else %>
              <span class="badge bg-secondary ms-2"><span class="fas fa-eye-slash me-1"></span> Inactive</span>
            <% end %>
					</h6>
				</div>
				<div class="col-sm-auto d-flex align-items-center ps-7">
					<h6 class="text-muted fs-10 mb-0">
						Start Date: <%= @event.start_date.strftime("%B %d, %Y") %>
					</h6>
				</div>
				<div class="col-sm-auto d-flex align-items-center ps-7">
					<h6 class="text-muted fs-10 mb-0">
						<% if @event.end_date.present? %>
							End Date: <%= @event.end_date.strftime("%B, %d, %Y") %>
						<% end %>
					</h6>
				</div>
			</div>
		</div>
	</div>
</div>

<%# Games and Posts %>
<div class="row g-3 mb-3">
  <div class="col-lg-6">
    <%# Games Section %>
    <div class="card mb-3">
      <div class="card-header border-bottom border-200 px-3">
        <div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Games</h5>

					<%= link_to new_game_path(event_id: @event.id), class: "btn btn-primary btn-sm" do %>
            <span class="fas fa-plus me-1" data-fa-transform="shrink-3"></span> Create Game
          <% end %>
        </div>
      </div>
      <div class="card-body">
        <% if @event.games.any? %>
			<% @event.games.each do |game| %>
				<%= render "games/components/upcoming_game_list_item", game: game %>
			<% end %>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted mb-3">No games have been added to this event yet.</p>
            <p class="text-muted mb-0 fs-10">
              <span class="fas fa-info-circle me-1"></span>
              Games will be added via the Games management section.
            </p>
          </div>
        <% end %>
      </div>
    </div>
	</div>

	<div class="col-lg-6">
    <%# Posts Section %>
		<div class="card mb-3">
			<div class="card-header border-bottom border-200 px-3">
				<div class="d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Posts</h5>

					<%= link_to new_post_path, class: "btn btn-primary btn-sm" do %>
            <span class="bi-pencil-square me-1" data-fa-transform="shrink-3"></span> Create Post
          <% end %>
        </div>
      </div>
			<div class="card-body">
				<% if @event.posts.any? %>
          <p class="text-muted">Posts will be listed here once the Posts feature is complete.</p>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted mb-3">No posts have been created for this event yet.</p>
            <p class="text-muted mb-0 fs-10">
              <span class="fas fa-info-circle me-1"></span>
              Posts are used to communicate with players about the event.
            </p>
          </div>
        <% end %>
			</div>
		</div>
  </div>
</div>