<div class="d-flex justify-content-between align-items-center mt-4">
  <h1><%= @event.title %></h1>
  <%= link_to "â† All Events", events_path, class: "btn btn-outline-secondary" %>
</div>

<div class="card mt-4">
  <div class="card-body">
    <p>
      <strong>Dates:</strong> <%= @event.start_date.strftime("%B %d, %Y") %> - <%= @event.end_date.strftime("%B %d, %Y") %>
    </p>
    <p>
      <strong>Status:</strong>
      <% if @event.start_date > Date.today %>
        <span class="badge bg-info">Upcoming</span>
      <% elsif @event.start_date <= Date.today && @event.end_date >= Date.today %>
        <span class="badge bg-success">In Progress</span>
      <% else %>
        <span class="badge bg-secondary">Completed</span>
      <% end %>
    </p>
  </div>
</div>

<div class="mt-4">
  <h2>Games</h2>
  <% if @event.games.any? %>
    <p class="text-muted">Games will be listed here</p>
  <% else %>
    <div class="alert alert-info">
      <p class="mb-0">No games have been added to this event yet.</p>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <h2>Posts</h2>
  <% if @event.posts.any? %>
    <p class="text-muted">Posts will be listed here</p>
  <% else %>
    <div class="alert alert-info">
      <p class="mb-0">No posts have been created for this event yet.</p>
    </div>
  <% end %>
</div>
