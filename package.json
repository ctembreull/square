{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@rails/actiontext": "^8.1.200",
    "autoprefixer": "^10.4.23",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "puppeteer": "^24.36.0",
    "sass": "^1.97.1",
    "trix": "^2.1.16"
  },
  "scripts": {
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules --quiet-deps --silence-deprecation=import",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:teams:compile": "sass ./app/assets/stylesheets/teams.scss:./app/assets/builds/teams.css --no-source-map --load-path=node_modules --quiet-deps --silence-deprecation=import",
    "build:teams:prefix": "postcss ./app/assets/builds/teams.css --use=autoprefixer --output=./app/assets/builds/teams.css",
    "build:game:compile": "sass ./app/assets/stylesheets/game.scss:./app/assets/builds/game.css --no-source-map --load-path=node_modules --quiet-deps --silence-deprecation=import",
    "build:game:prefix": "postcss ./app/assets/builds/game.css --use=autoprefixer --output=./app/assets/builds/game.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix && yarn build:teams:compile && yarn build:teams:prefix && yarn build:game:compile && yarn build:game:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\""
  },
  "browserslist": [
    "defaults"
  ]
}
